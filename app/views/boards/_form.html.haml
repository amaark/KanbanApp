= form_for @board do |f|
  - if @board.errors.any?
    #error_explanation
      %h2= "#{pluralize(@board.errors.count, "error")} prohibited this board from being saved:"
      %ul
        - @board.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :board_title
    = f.text_field :board_title
  .field
    = f.label :board_description
    = f.text_area :board_description
  .actions
    = f.submit t('save')
