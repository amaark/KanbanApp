= form_for @card do |f|
  - if @card.errors.any?
    #error_explanation
      %h2= "#{pluralize(@card.errors.count, "error")} prohibited this card from being saved:"
      %ul
        - @card.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :column
    = f.text_field :column
  .field
    = f.label :card_name
    = f.text_field :card_name
  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :topic
    = f.text_field :topic
  .field
    = f.label :type
    = f.text_field :type
  .actions
    = f.submit 'Save'
